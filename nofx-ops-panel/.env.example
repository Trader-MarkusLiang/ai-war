# NOFX 运维面板环境变量配置示例
# 复制此文件为 .env 并修改配置

# ==================== 服务器配置 ====================
# 远程服务器地址
REMOTE_HOST=47.236.159.60

# SSH 用户名
REMOTE_USER=root

# 远程目录
REMOTE_DIR=/opt/nofx

# SSH 密钥路径
SSH_KEY_PATH=~/.ssh/id_rsa

# ==================== API 配置 ====================
# API 端口
API_PORT=8800

# JWT 密钥（生产环境必须修改！）
JWT_SECRET=your-secret-key-change-in-production

# JWT 过期时间（小时）
JWT_EXPIRE_HOURS=24

# 管理员密码
ADMIN_PASSWORD=admin123

# ==================== SSH 连接池配置 ====================
# 最大连接数
SSH_POOL_MAX_CONNECTIONS=5

# 命令超时时间（秒）
SSH_COMMAND_TIMEOUT=60

# ==================== CORS 配置 ====================
# 允许的源（逗号分隔）
ALLOWED_ORIGINS=http://localhost:8801,http://localhost:8802,http://localhost:8803

# ==================== SSH 隧道配置 ====================
# 本地前端端口
TUNNEL_LOCAL_FRONTEND_PORT=3333

# 本地后端端口
TUNNEL_LOCAL_BACKEND_PORT=8888

# 远程前端端口
TUNNEL_REMOTE_FRONTEND_PORT=3000

# 远程后端端口
TUNNEL_REMOTE_BACKEND_PORT=8080

